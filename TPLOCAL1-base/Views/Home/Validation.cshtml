@model TPLOCAL1.Models.FormModel

<!DOCTYPE html>
<html>
<head>
    <title>Validation Page</title>
    <!-- Mettez ici vos liens vers les fichiers CSS ou autres ressources -->
    <link rel="stylesheet" href="~/resources/Index.css"> <!-- Ajoutez le lien vers votre fichier CSS -->
     <style>
  /* Styles pour le tableau */
table {
        border-collapse: separate;
        border-spacing: 5px;
      }

/* Styles pour les cellules */
th, td {
        border: 1px solid black; /* Bordure des cellules */
        padding: 8px;
        text-align: center;
       }
</style>
</head>
<body>
    @Html.Partial("Entete")
   
    <header>
        <h2>Votre formulaire a été pris en compte</h2>
    </header>

    <!-- Afficher le contenu du formulaire -->
    <section>
        <table>
            <!-- Informations personnelles -->
            <tr>
                <td colspan="2" style="text-align:center;"><strong>Informations personnelles</strong></td>
            </tr>
            <tr>
                <td>Nom :</td>
                <td>@Model.Nom</td>
            </tr>
            <tr>
                <td>Prénom :</td>
                <td>@Model.Prenom</td>
            </tr>
            <tr>
                <td>Genre :</td>
                <td>@Model.Genre</td>
            </tr>
            <tr>
                <td>Adresse :</td>
                <td>@Model.Adresse</td>
            </tr>
            <tr>
                <td>Code postal :</td>
                <td>@Model.CodePostal</td>
            </tr>
            <tr>
                <td>Ville :</td>
                <td>@Model.Ville</td>
            </tr>
            <tr>
                <td>Adresse e-mail :</td>
                <td>@Model.Email</td>
            </tr>
        </table>
    </section>

    <section>
        <table>
            <!-- Informations de formation suivie -->
            <tr>
                <td colspan="2" style="text-align:center;"><strong>Informations de formation suivie</strong></td>
            </tr>
            <tr>
                <td>Date de début de la formation :</td>
                <td>@Model.DateDebutFormation.ToString("dd/MM/yyyy")</td>
            </tr>
            <tr>
                <td>Type de formation :</td>
                <td>@Model.TypeFormation</td>
            </tr>
        </table>
    </section>

    <section>
        <table>
            <!-- Avis sur la formation -->
            <tr>
                <td colspan="2" style="text-align:center;"><strong>Avis sur la formation</strong></td>
            </tr>
            <tr>
                <td>Avis sur la formation Cobol :</td>
                <td>@Model.AvisCobol</td>
            </tr>
            <tr>
                <td>But de la formation :</td>
                <td>@Model.ButFormation</td>
            </tr>
        </table>
    </section>

</body>
</html>

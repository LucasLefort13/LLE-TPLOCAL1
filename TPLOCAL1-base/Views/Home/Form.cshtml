
@model TPLOCAL1.Models.FormModel
@Html.ValidationSummary(false, "")
<!DOCTYPE html>
<html>
<head>
    <title>Formulaire</title>
    <link rel="stylesheet" href="~/resources/Index.css">
     <style>
  /* Styles pour le tableau */
table {
    border-collapse: separate;
    border-spacing: 5px;
}

/* Styles pour les cellules */
th, td {
    border: 1px solid black; /* Bordure des cellules */
    padding: 8px;
    text-align: center;
}
</style>
</head>
<body>
    
       
    @Html.Partial("Entete")

    <section>
        <h2>Informations personnelles</h2>
        <form action="/Home/ValidationForm" method="post">
            <table>
                <tr>
                    <td>Nom :</td>
                    <td><input type="text" name="Nom" value="@Model.Nom" required></td>
                    <td>@Html.ValidationMessageFor(model => model.Nom)</td>
                </tr>
                <tr>
                    <td>Prénom :</td>
                    <td><input type="text" name="Prenom" value="@Model.Prenom" required></td>
                    <td>@Html.ValidationMessageFor(model => model.Prenom)</td>
                </tr>
                <tr>
                    <td>Genre :</td>
                    <td>
                        <select name="Genre" required>
                         @foreach (var option in new[] { "Homme", "Femme", "Autre" })
                        {
                        var isSelected = Model.Genre == option ? "selected" : "";
                         <option value="@option" selected="@isSelected">@option</option>
                         }
                    </select>

                    </td>
                    <td>@Html.ValidationMessageFor(model => model.Genre)</td>
                </tr>
                <tr>
                    <td>Adresse :</td>
                    <td><input type="text" name="Adresse" value="@Model.Adresse" required></td>
                    <td>@Html.ValidationMessageFor(model => model.Adresse)</td>
                </tr>
                <tr>
                    <td>Code postal :</td>
                    <td><input type="text" name="CodePostal" value="@Model.CodePostal" pattern="[0-9]{5}" required></td>
                    <td>@Html.ValidationMessageFor(model => model.CodePostal)</td>
                </tr>
                <tr>
                    <td>Ville :</td>
                    <td><input type="text" name="Ville" value="@Model.Ville" required></td>
                    <td>@Html.ValidationMessageFor(model => model.Ville)</td>
                </tr>
                <tr>
                    <td>Adresse e-mail :</td>
                    <td><input type="email" name="Email" value="@Model.Email" required></td>
                    <td>@Html.ValidationMessageFor(model => model.Email)</td>
                </tr>
            </table>

            <h2>Informations de formation suivie</h2>
            <table>
                <tr>
                    <td>Date de début de la formation :</td>
                    <td><input type="date" name="DateDebutFormation" value="@Model.DateDebutFormation" max="2024-02-06" required></td>
                    <td>@Html.ValidationMessageFor(model => model.DateDebutFormation)</td>
                </tr>
                <tr>
                    <td>Type de formation :</td>
                    <td>    
                        <select name="TypeFormation" required>
    <option value="" selected disabled>Sélectionnez une formation</option>
    @{
        var cobolSelected = Model.TypeFormation == "Cobol" ? "selected" : "";
        var objectSelected = Model.TypeFormation == "Object" ? "selected" : "";
        var dualSkillsSelected = Model.TypeFormation == "DualSkills" ? "selected" : "";
    }
    <option value="Cobol" selected="@cobolSelected">Cobol Training</option>
    <option value="Object" selected="@objectSelected">Object training</option>
    <option value="DualSkills" selected="@dualSkillsSelected">Dual Skills Training</option>
</select>

                </tr>
            </table>

            <h2>Avis sur la formation</h2>
            <table>
                <tr>
                    <td>Avis sur la formation Cobol :</td>
                    <td><input type="text" name="AvisCobol" value="@Model.AvisCobol"></td>
                </tr>
                <tr>
                    <td>But de la formation :</td>
                    <td><input type="text" name="ButFormation" value="@Model.ButFormation"></td>
                </tr>
            </table>

            <input type="submit" value="Valider">
        </form>
    </section>

</body>
</html>
